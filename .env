# Environment Configuration
# API Key is in .streamlit/secrets.toml (more secure for deployment)

# ============================================================================
# Model Configuration
# ============================================================================
OPENAI_MODEL=gpt-4o
MAX_TOKENS=6000
TEMPERATURE=0.2

# ============================================================================
# Token and Processing Limits
# ============================================================================
MAX_INPUT_TOKENS_PER_CALL=22000
MAX_TICKERS_PER_QUERY=15
MAX_ROWS_TO_INCLUDE=1000
MAX_HISTORY_LENGTH=5

# ============================================================================
# Batch Processing Settings
# ============================================================================
MAX_SEQUENTIAL_BATCHES=5
BATCH_DELAY_SECONDS=65.0
ENABLE_BATCH_PROCESSING=false

# ============================================================================
# Data Deduplication Columns (comma-separated)
# ============================================================================
DEDUP_COLUMNS=Function,"Symbol, Signal, Signal Date/Price[$]"
